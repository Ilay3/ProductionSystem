@model IEnumerable<ProductionSystem.Models.Changeover>

@{
    ViewData["Title"] = "Переналадки";
}

<div class="row">
    <div class="col-md-12">
        <h2>@ViewData["Title"]</h2>

        <p>
            <a asp-action="Create" class="btn btn-primary">Создать новую переналадку</a>
        </p>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Станок</th>
                    <th>С детали</th>
                    <th>На деталь</th>
                    <th>@Html.DisplayNameFor(model => model.ChangeoverTime)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Machine.Name</td>
                        <td>@item.FromDetail.Name</td>
                        <td>@item.ToDetail.Name</td>
                        <td>@item.ChangeoverTime.ToString("F3") ч</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Редактировать</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Подробно</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>