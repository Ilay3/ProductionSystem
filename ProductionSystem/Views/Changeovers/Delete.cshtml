@model ProductionSystem.Models.Changeover

@{
    ViewData["Title"] = "Удаление переналадки";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <p>Вы уверены, что хотите удалить эту переналадку?</p>
</div>

<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Станок</dt>
            <dd class="col-sm-9">@Model.Machine.Name</dd>

            <dt class="col-sm-3">С детали</dt>
            <dd class="col-sm-9">@Model.FromDetail.Name</dd>

            <dt class="col-sm-3">На деталь</dt>
            <dd class="col-sm-9">@Model.ToDetail.Name</dd>

            <dt class="col-sm-3">Время переналадки</dt>
            <dd class="col-sm-9">@Model.ChangeoverTime.ToString("F3") ч</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Удалить</button>
            <a asp-action="Index" class="btn btn-secondary">Отмена</a>
        </form>
    </div>
</div>