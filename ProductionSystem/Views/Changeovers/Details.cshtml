@model ProductionSystem.Models.Changeover

@{
    ViewData["Title"] = "Детали переналадки";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Станок</dt>
            <dd class="col-sm-9">@Model.Machine.Name</dd>

            <dt class="col-sm-3">С детали</dt>
            <dd class="col-sm-9">@Model.FromDetail.Name</dd>

            <dt class="col-sm-3">На деталь</dt>
            <dd class="col-sm-9">@Model.ToDetail.Name</dd>

            <dt class="col-sm-3">Время переналадки</dt>
            <dd class="col-sm-9">@Model.ChangeoverTime.ToString("F3") ч</dd>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <dt class="col-sm-3">Описание</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            }

            <dt class="col-sm-3">Создана</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>
        </dl>

        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редактировать</a>
            <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
        </div>
    </div>
</div>