@model ProductionSystem.Models.Operation

@{
    ViewData["Title"] = "Удаление операции";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <p>Вы уверены, что хотите удалить эту операцию?</p>
</div>

<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Деталь</dt>
            <dd class="col-sm-9">@Model.Detail.Name</dd>

            <dt class="col-sm-3">Номер операции</dt>
            <dd class="col-sm-9">@Model.OperationNumber</dd>

            <dt class="col-sm-3">Название</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Тип станка</dt>
            <dd class="col-sm-9">@Model.MachineType.Name</dd>

            <dt class="col-sm-3">Время на 1 деталь</dt>
            <dd class="col-sm-9">@Model.TimePerPiece.ToString("F3") ч</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Удалить</button>
            <a asp-action="Index" asp-route-detailId="@Model.DetailId" class="btn btn-secondary">Отмена</a>
        </form>
    </div>
</div>