@model ProductionSystem.Models.Machine

@{
    ViewData["Title"] = "Удаление станка";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <p>Вы уверены, что хотите удалить этот станок?</p>
</div>

<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Название</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Инвентарный номер</dt>
            <dd class="col-sm-9">@Model.InventoryNumber</dd>

            <dt class="col-sm-3">Тип станка</dt>
            <dd class="col-sm-9">@Model.MachineType.Name</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Удалить</button>
            <a asp-action="Index" class="btn btn-secondary">Отмена</a>
        </form>
    </div>
</div>