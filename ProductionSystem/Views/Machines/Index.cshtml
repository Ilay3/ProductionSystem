@model IEnumerable<ProductionSystem.Models.Machine>

@{
    ViewData["Title"] = "Станки";
}

<div class="row">
    <div class="col-md-12">
        <h2>@ViewData["Title"]</h2>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">@TempData["Message"]</div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <p>
            <a asp-action="Create" class="btn btn-primary">Создать новый станок</a>
        </p>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.InventoryNumber)</th>
                    <th>Тип станка</th>
                    <th>@Html.DisplayNameFor(model => model.Priority)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.InventoryNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.MachineType.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Priority)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Редактировать</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Подробно</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>